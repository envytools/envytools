			<bitfield low="0" high="7" name="PIC_WIDTH" shr="4"/>
			<bitfield low="8" high="15" name="PIC_HEIGHT" shr="4"/>
			<bitfield low="16" high="23" name="SURF_WIDTH" shr="4"/>
