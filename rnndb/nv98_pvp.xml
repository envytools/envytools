		</reg32>
	</array>
	<array offset="0x5c0" stride="0x40" name="VC1">
		<reg32 offset="0x00" name="INTR_UNK0"/>
		<reg32 offset="0x04" name="INTR_UNK1"/>
		<reg32 offset="0x08" name="INTR_UNK2"/>
		<reg32 offset="0x0c" name="TRIGGER">
			<bitfield pos="0" name="LUMA_TRIGGER"/>
