	<reg32 offset="0x382d8" name="TIME_HIGH"/>
	<!-- 382dc engine-specific -->
	<reg32 offset="0x382e0" name="SCRATCH_X2H"/>
	<reg32 offset="0x382e4" name="SCRATCH_H2X"/>
</group>

