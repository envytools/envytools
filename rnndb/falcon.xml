		<bitfield name="VALID" pos="30"/>
	</reg32>
	<reg32 offset="0x058" name="CHANNEL_TRIGGER">
		<bitfield pos="0" name="UNLOAD"/>
		<bitfield pos="1" name="LOAD"/>
	</reg32>
	<reg32 offset="0x05c" name="STATUS_PAUSE">
		<bitfield low="0" high="15" name="PAUSED_MASK"/>
