	</reg32>
	<reg32 offset="0x04c" name="STATUS_BUSY"/> <!-- bits depend on engine -->

	<!-- the following two are also conspiciously absent from PGRAPH. -->
	<reg32 offset="0x050" name="CHANNEL_CUR">
