	</reg32>
	<reg32 offset="0x060" name="VM_SUPERVISOR" type="boolean"/>
	<reg32 offset="0x064" name="FIFO_DATA"/>
	<reg32 offset="0x068" name="FIFO_CMD">
		<bitfield low="0" high="10" name="MTHD" shr="2"/>
		<bitfield low="11" high="13" name="SUBC"/>
