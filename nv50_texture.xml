<database>
<import file="copyright.xml"/>

<enum name="NV50_TIC_MAP">
	<value value="0" name="ZERO" />
	<value value="2" name="C0" />
	<value value="3" name="C1" />
	<value value="4" name="C2" />
	<value value="5" name="C3" />
	<value value="6" name="ONE_INT" /> <!-- 0x00000001 -->
	<value value="7" name="ONE_FLOAT" /> <!-- 0x3f800000 -->
</enum>

<enum name="NV50_TIC_TYPE">
	<value value="1" name="SNORM" />
	<value value="2" name="UNORM" />
	<value value="3" name="SINT" />
	<value value="4" name="UINT" />
	<value value="5" name="SSCALED" />
	<value value="6" name="USCALED" />
	<value value="7" name="FLOAT" />
</enum>

<domain name="NV50_TIC" size="0x20">
	<brief>Texture image control block</brief>
	<reg32 offset="0" name="0">
		<bitfield high="29" low="27" name="MAPA" type="NV50_TIC_MAP" />
		<bitfield high="26" low="24" name="MAPB" type="NV50_TIC_MAP" />
		<bitfield high="23" low="21" name="MAPG" type="NV50_TIC_MAP" />
		<bitfield high="20" low="18" name="MAPR" type="NV50_TIC_MAP" />
		<bitfield high="17" low="15" name="TYPE3" type="NV50_TIC_TYPE" />
		<bitfield high="14" low="12" name="TYPE2" type="NV50_TIC_TYPE" />
		<bitfield high="11" low="9" name="TYPE1" type="NV50_TIC_TYPE" />
		<bitfield high="8" low="6" name="TYPE0" type="NV50_TIC_TYPE" />
		<bitfield high="5" low="0" name="FMT">
			<!-- could we change it to LE? format 5 doesn't exactly make sense now.... -->
			<value value="0x01" name="32_32_32_32" />
			<value value="0x03" name="16_16_16_16" />
			<value value="0x04" name="32_32" />
			<value value="0x05" name="32_8">
				<doc>32-bit word C0 followed by byte C1 followed by 3 ignored bytes.</doc>
			</value>
			<value value="0x08" name="8_8_8_8" />
			<value value="0x09" name="2_10_10_10" />
			<value value="0x0c" name="16_16" />
			<value value="0x0d" name="8_24" />
			<value value="0x0e" name="24_8" />
			<value value="0x0f" name="32" />
			<value value="0x10" name="BPTC_FLOAT"/>
			<value value="0x11" name="BPTC_UFLOAT"/>
			<value value="0x12" name="4_4_4_4" />
			<value value="0x13" name="5_5_5_1" />
			<value value="0x14" name="1_5_5_5" />
			<value value="0x15" name="5_6_5" />
			<value value="0x16" name="6_5_5" />
			<value value="0x17" name="BPTC"/>
			<value value="0x18" name="8_8" />
			<value value="0x1b" name="16" />
			<value value="0x1d" name="8" />
			<value value="0x1e" name="4_4" />
			<value value="0x1f" name="BITMAP_8X8">
				<doc>Each element is 64-bit LE word specifying 8x8 block of 1-bit texels.
				This format forces using a special "box" filter: result of sampling is
				a percentage of "lit" area in WxH rectangle centered on the sampled location.</doc>
			</value>
			<value value="0x20" name="E5_9_9_9">
				<doc>Shared-exponent type.</doc>
			</value>
			<value value="0x21" name="10_11_11" />
			<value value="0x22" name="C1_C2_C1_C0">
				<doc>Format is 8_8_8_8. C0, C2 are shared between two neighboring texels,
				C1 are separate. Single 32-bit word covers two such texels. Meant to be
				used as YUV formats.</doc>
			</value>
			<value value="0x23" name="C2_C1_C0_C1">
				<doc>Like above.</doc>
			</value>
			<value value="0x24" name="DXT1" />
			<value value="0x25" name="DXT3" />
			<value value="0x26" name="DXT5" />
			<value value="0x27" name="RGTC1" />
			<value value="0x28" name="RGTC2" />
			<value value="0x29" name="Z24S8" />
			<value value="0x2a" name="S8Z24" />
			<value value="0x2b" name="X8Z24" />
			<value value="0x2c" name="C8Z24_MS4_CS4" />
			<value value="0x2d" name="C8Z24_MS8_CS8" />
			<value value="0x2e" name="C8Z24_MS4_CS12" />
			<value value="0x2f" name="Z32" />
			<value value="0x30" name="X24S8Z32" />
			<value value="0x31" name="X16C8S8X8Z24_MS4_CS4" />
			<value value="0x32" name="X16C8S8X8Z24_MS8_CS8" />
			<value value="0x33" name="X16C8X8Z32_MS4_CS4" />
			<value value="0x34" name="X16C8X8Z32_MS8_CS8" />
			<value value="0x35" name="X16C8S8Z32_MS4_CS4" />
			<value value="0x36" name="X16C8S8Z32_MS8_CS8" />
			<value value="0x37" name="X16C8S8X8Z24_MS4_CS12" />
			<value value="0x38" name="X16C8X8Z32_MS4_CS12" />
			<value value="0x39" name="X16C8S8Z32_MS4_CS12" />
			<value value="0x3a" name="Z16" />
		</bitfield>
	</reg32>

	<reg32 offset="0x4" name="1">
		<bitfield high="31" low="0" name="OFFSET_LOW" />
	</reg32>

	<reg32 offset="0x8" name="2">
		<bitfield high="7" low="0" name="OFFSET_HIGH" />
		<bitfield pos="10" name="COLORSPACE_SRGB" />
		<bitfield high="17" low="14" name="TARGET">
			<value value="0" name="1D" />
			<value value="1" name="2D" />
			<value value="2" name="3D" />
			<value value="3" name="CUBE" />
			<value value="4" name="1D_ARRAY" />
			<value value="5" name="2D_ARRAY" />
			<value value="6" name="BUFFER" />
			<value value="7" name="RECT" />
			<value value="8" name="CUBE_ARRAY" />
		</bitfield>
		<bitfield pos="18" name="LINEAR" />
		<bitfield high="21" low="19" name="TILE_MODE_X" />
		<bitfield high="24" low="22" name="TILE_MODE_Y" />
		<bitfield high="27" low="25" name="TILE_MODE_Z" />
		<bitfield high="29" low="28" name="2D_UNK0258" />
		<bitfield pos="30" name="NO_BORDER"/> <!-- if 0, texture includes one-texel border that isn't counted in its dimensions. -->
		<bitfield pos="31" name="NORMALIZED_COORDS" />
	</reg32>

	<reg32 offset="0xc" name="3">
		<bitfield high="31" low="0" name="PITCH">
			<brief>for linear textures</brief>
		</bitfield>
	</reg32>

	<reg32 offset="0x10" name="4">
		<bitfield high="31" low="0" name="WIDTH" />
	</reg32>

	<reg32 offset="0x14" name="5">
		<bitfield high="31" low="28" name="LAST_LEVEL" />
		<bitfield high="27" low="16" name="DEPTH" />
		<bitfield high="15" low="0" name="HEIGHT">
			<doc>Set to 0 for height of 65536.</doc>
		</bitfield>
	</reg32>

	<reg32 offset="0x1c" name="7">
		<bitfield high="3" low="0" name="BASE_LEVEL" />
		<bitfield high="7" low="4" name="MAX_LEVEL" />
	</reg32>

</domain>

<enum name="NV50_TSC_WRAP">
	<value value="0" name="REPEAT" />
	<value value="1" name="MIRROR_REPEAT" />
	<value value="2" name="CLAMP_TO_EDGE" />
	<value value="3" name="CLAMP_TO_BORDER" />
	<value value="4" name="CLAMP" />
	<value value="5" name="MIRROR_CLAMP_TO_EDGE" />
	<value value="6" name="MIRROR_CLAMP_TO_BORDER" />
	<value value="7" name="MIRROR_CLAMP" />
</enum>

<enum name="nv50_tsc_filter" inline="yes">
	<value value="1" name="NEAREST" />
	<value value="2" name="LINEAR" />
</enum>

<enum name="nv50_tsc_mipfilter" inline="yes">
	<value value="1" name="NONE" />
	<value value="2" name="NEAREST" />
	<value value="3" name="LINEAR" />
</enum>

<domain name="NV50_TSC" size="0x20">
	<brief>Texture sampler control block</brief>
	<reg32 offset="0" name="0">
		<bitfield high="2" low="0" name="WRAPS" type="NV50_TSC_WRAP" />
		<bitfield high="5" low="3" name="WRAPT" type="NV50_TSC_WRAP" />
		<bitfield high="8" low="6" name="WRAPR" type="NV50_TSC_WRAP" />
		<bitfield pos="9" name="SHADOW_COMPARE_ENABLE"/>
		<bitfield high="12" low="10" name="SHADOW_COMPARE_FUNC"/>
		<bitfield high="16" low="14" name="BOX_S">
			<doc>For BITMAP_8X8 format. Width of the box filter in texels - 1.</doc>
		</bitfield>
		<bitfield high="19" low="17" name="BOX_T">
			<doc>For BITMAP_8X8 format. Height of the box filter in texels - 1.</doc>
		</bitfield>
		<bitfield high="22" low="20" name="ANISOTROPY_MASK" />
	</reg32>

	<reg32 offset="0x4" name="1">
		<bitfield high="1" low="0" name="MAGF" type="nv50_tsc_filter" />
		<bitfield high="5" low="4" name="MINF" type="nv50_tsc_filter" />
		<bitfield high="7" low="6" name="MIPF" type="nv50_tsc_mipfilter" />
		<bitfield high="24" low="12" name="LOD_BIAS">
			<doc>Fixed-point signed 1.4.8</doc>
		</bitfield>
		<value value="0x10000000" name="UNKN_ANISO_15" />
		<value value="0x18000000" name="UNKN_ANISO_35" />
	</reg32>

	<reg32 offset="0x8" name="2">
		<bitfield high="11" low="0" name="MIN_LOD">
			<doc>Fixed-point unsigned 4.8</doc>
		</bitfield>
		<bitfield high="23" low="12" name="MAX_LOD">
			<doc>Fixed-point unsigned 4.8</doc>
		</bitfield>
	</reg32>

	<reg32 offset="0x10" name="4">
		<bitfield high="31" low="0" name="BORDER_COLOR_RED" />
	</reg32>

	<reg32 offset="0x14" name="5">
		<bitfield high="31" low="0" name="BORDER_COLOR_GREEN" />
	</reg32>

	<reg32 offset="0x18" name="6">
		<bitfield high="31" low="0" name="BORDER_COLOR_BLUE" />
	</reg32>

	<reg32 offset="0x1c" name="7">
		<bitfield high="31" low="0" name="BORDER_COLOR_ALPHA" />
	</reg32>

</domain>

</database>
